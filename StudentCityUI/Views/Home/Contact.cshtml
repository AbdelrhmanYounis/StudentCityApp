@model StudentCity.DAL.Models.ContactUs
@using StudentCityUI.Resources
@{
  ViewData["Title"] = "Contact Us - ";
}

<section class="contact-map">
  <div class="map-outer">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3625.189581447385!2d46.72156521499933!3d24.68600888413649!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjTCsDQxJzA5LjYiTiA0NsKwNDMnMjUuNSJF!5e0!3m2!1sen!2seg!4v1537308377351" width="100%" height="550" frameborder="0" style="border:0" allowfullscreen></iframe>
  </div>
</section>
<!-- Start Contact Part -->
<section class="default-section contact-part home-icon">
  <div class="icon-default">
    <a href="#"><img src="/images/scroll-arrow.png" alt="" /></a>
  </div>
  <div class="container">
    <div class="title text-center">
      <h2 class="text-coffee">@Resource.contactus</h2>
      <h6 class="heade-xs">@Resource.contactUsDesc</h6>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
        <div class="contact-blog-row">
          <div class="contact-icon">
            <img src="/images/location-icon.png" alt="" />
          </div>
          <p>@Resource.fullAddress.</p>
        </div>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
        <div class="contact-blog-row">
          <div class="contact-icon">
            <img src="/images/cell-icon.png" alt="" />
          </div>
          <p><a href="tel:+966 59 3044 546">+966 59 3044 546</a></p>
        </div>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
        <div class="contact-blog-row">
          <div class="contact-icon">
            <img src="/images/mail-icon.png" alt="" />
          </div>
          <p><a href="mailto:info@StudentCityhouse.net">info@StudentCityhouse.net</a></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-sm-8 col-xs-12 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
        <h5 class="text-coffee">@Resource.leaveMessage</h5>
        @*<p>Aenean massa diam, viverra vitae luctus sed, gravida eget est. Etiam nec ipsum porttitor, consequat libero eu, dignissim eros. Nulla auctor lacinia enim id mollis.</p>*@
        <form asp-action="Contact">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="row">
            <div class="alert-container"></div>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <label>@Resource.name *</label>
              <input name="Name" type="text" required="" />
              <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <label>@Resource.mobile *</label>
              <input name="Mobile" type="text" required="" />
              <span asp-validation-for="Mobile" class="text-danger"></span>

            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <label>@Resource.email *</label>
              <input name="Email" type="email" required="" />
              <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <label>@Resource.subject *</label>
              <input name="Subject" type="text" required="" />
              <span asp-validation-for="Subject" class="text-danger"></span>

            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
              <label>@Resource.yourMessage *</label>
              <textarea name="Message" required=""></textarea>
              <span asp-validation-for="Message" class="text-danger"></span>

            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
              <input name="submit" value="@Resource.sendMessage" class="btn-black pull-right send_message" type="submit" />
            </div>
          </div>
        </form>


      </div>
      <div class="col-md-4 col-sm-4 col-xs-12 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
        <h5 class="text-coffee">@Resource.openingHours</h5>
        <ul class="time-list">
          <li><span class="week-name">@Resource.Monday</span> <span>10-6 @Resource.pm</span></li>
          <li><span class="week-name">@Resource.Tuesday</span> <span>10-6 @Resource.pm</span></li>
          <li><span class="week-name">@Resource.Wednesday</span> <span>10-6 @Resource.pm</span></li>
          <li><span class="week-name">@Resource.Thursday</span> <span>10-6 @Resource.pm</span></li>
          <li><span class="week-name">@Resource.Friday</span> <span>10-6 @Resource.pm</span></li>
          <li><span class="week-name">@Resource.Saturday</span> <span>10-6 @Resource.pm</span></li>
          <li><span class="week-name">@Resource.Sunday</span> <span>@Resource.Closed</span></li>
        </ul>
      </div>
    </div>
  </div>
</section>