@model StudentCity.DAL.Models.Lookups.College
@using StudentCityUI.Resources

<section class="default-section contact-part home-icon">
    
    <div class="container">
        <div class="title">

            <div class="col-sm-6">
                <form asp-action="Add">
                    <h2 class="text-coffee">@Resource.Add @Resource.College</h2>
                    <div class="form-group">
                        <input asp-for="NameEn" class="form-control" placeholder="@Resource.EnglishName" />
                        <span asp-validation-for="NameEn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="NameAr" class="form-control" placeholder="@Resource.ArabicName" />
                        <span asp-validation-for="NameAr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="LevelNum" type="number" min="2" max="7" class="form-control" placeholder="@Resource.NumOf @Resource.Levels" />
                        <span asp-validation-for="NameAr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="@Resource.save" class="button-default btn-primary-gold" />
                    </div>
                </form>
            </div>
            <div class="col-sm-6">
                @Html.ActionLink(Resource.backTo + " " + Resource.List + " " + Resource.Colleges, "Index", "College", null, new { @class = "tag-btn" })
            </div>
        </div>
    </div>
</section>
