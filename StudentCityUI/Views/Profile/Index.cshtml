                        Error("Error");
                    }
                }
            })
        }
        /****************************************************************************/
        function keyAction() {
            $.ajax({
                type: "POST",
                url: "/Profile/ChangeKey",

                success: function (response) {
                    Success("Success");

                    if (response == 1) {
                        $("#lock").show();
                        $("#unlock").hide();
                    }
                    else {
                        $("#lock").hide();
                        $("#unlock").show();
                    }
                }

            })

        }
        /****************************************************************************/
        function detailsAction(id) {
               
            var url = "/Student/detailsAction/studentId?="+id;
            $("#DetailsModalBody").load(url, function () {

                $("#DetailsModal").show();
            })
        }
    </script>
}